{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block body %}
<main class="py-10">
    <!-- Titre -->
    <div class="p-6 mx-auto text-center">
        <h1 class="text-5xl lg:text-6xl font-extrabold text-primaryBlue mb-4">
            Mini Reseau-Social
        </h1>
        <p class="mt-2 dark:text-white text-gray-700 text-lg font-semibold">Bienvenue sur notre plateforme</p>
    </div>

    <div class="py-10">
        <div class="container mx-auto px-4 grid gap-6 md:grid-cols-2 lg:grid-cols-5">
            {% for message in messages %}
                {% include 'partials/_message.html.twig' with {'message': message} %}
            {% else %}
                <p>Aucun message trouv√©.</p>
            {% endfor %} 
        </div>
    </div>
</main>
{% endblock %}
